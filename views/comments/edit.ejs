<%- include("../partials/header") %>
<div class="container">
    <div> 
            <h1 class="text-center">Edit Comment</h1>
            <form action="/campgrounds/<%=camp_id%>/comments/<%=comment._id%>?_method=PUT" method="POST">
                <div class="form-group mt-5">
                    <label >Comment</label>
                    <input type="text" name="comment[text]"  class="form-control" value="<%=comment.text%>">
                </div>
                <div class="form-group">
                    <input type="submit"  class="form-control btn btn-lg btn-secondary">
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>
    </div>
</div>
<%- include("../partials/footer") %>