<%- include("../partials/header") %>
<div class="container">
    <div> 
            <h1 class="text-center">Edit <%=camp.name%></h1>
            <form action="/campgrounds/<%=camp._id%>?_method=PUT" method="POST">
                <div class="form-group mt-5">
                    <label >Name of Camp</label>
                    <input type="text" name="camp[name]"  class="form-control" value="<%=camp.name%>">
                </div>
                <div class="form-group">
                    <label >Image URL</label>
                    <input type="text" name="camp[image]" class="form-control"  value="<%=camp.image%>">
                </div>
                <div class="form-group">
                    <label >Description</label>
                    <input type="text" name="camp[description]" class="form-control"  value="<%=camp.description%>">
                </div>
                <div class="form-group">
                    <input type="submit"  class="form-control btn btn-lg btn-secondary">
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>
    </div>
</div>
<%- include("../partials/footer") %>